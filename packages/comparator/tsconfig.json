{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}

{
  "name": "@touca/api",
  "version": "2.0.0",
  "description": "Continuous regression testing for critical software workflows.",
  "private": true,
  "license": "UNLICENSED",
  "repository": "https://github.com/trytouca/touca.git",
  "bugs": "https://github.com/trytouca/touca/issues",
  "homepage": "https://touca.io",
  "keywords": [
    "snapshot-testing",
    "test-automation",
    "test-framework",
    "regression-testing"
  ],
  "author": {
    "name": "Pejman Ghorbanzade",
    "email": "pejman@touca.io"
  },
  "type": "module",
  "exports": "./dist/server.js",
  "engines": {
    "node": ">=16.14",
    "pnpm": ">=7.0.0"
  },
  "scripts": {
    "build": "run-p build:mails build:ts",
    "build:mails": "shx mkdir -p dist/templates && mjml templates/*.mjml --config.beautify false --config.minify true --output ./dist/templates/ && shx cp -r templates/reports dist/templates",
    "build:ts": "tsc",
    "clean": "shx rm -rf dist",
    "dev": "tsx watch --clear-screen=false ./src/server.ts",
    "dev:debug": "tsx watch --clear-screen=false --inspect ./src/server.ts",
    "docs": "run-p docs:external docs:internal",
    "docs:external": "shx mkdir -p ../local/api/docs/external && redocly build-docs ../packages/api-schema/src/schema.yaml --output=../local/api/docs/external/index.html --title=\"Touca Server API Reference\"",
    "docs:internal": "typedoc",
    "lint": "eslint src test --ext .ts",
    "start": "node dist/server.js",
    "test": "cross-env ENV_FILE=test vitest run --coverage --reporter verbose"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.258.0",
    "@aws-sdk/client-s3": "^3.258.0",
    "@sindresorhus/df": "^4.0.0",
    "@touca/api-schema": "workspace:*",
    "@touca/comparator": "workspace:*",
    "@touca/flatbuffers": "workspace:*",
    "analytics-node": "^6.2.0",
    "archiver": "^5.3.1",
    "bcryptjs": "^2.4.3",
    "bullmq": "^3.5.10",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.3",
    "file-type": "^18.2.0",
    "flatbuffers": "^23.1.21",
    "google-auth-library": "^8.7.0",
    "hide-powered-by": "^1.0.0",
    "ioredis": "^5.3.0",
    "jws": "^4.0.0",
    "lodash-es": "^4.17.21",
    "marked": "^4.2.12",
    "mongoose": "^6.9.0",
    "mustache": "^4.2.0",
    "nanoid": "^4.0.0",
    "nocache": "^3.0.4",
    "nodemailer": "^6.9.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@redocly/cli": "^1.10.3",
    "@types/analytics-node": "^3.1.10",
    "@types/archiver": "^5.3.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.16",
    "@types/flatbuffers": "^1.9.0",
    "@types/jws": "^3.2.5",
    "@types/lodash-es": "^4.17.6",
    "@types/marked": "^4.0.7",
    "@types/minio": "^7.0.15",
    "@types/mustache": "^4.2.2",
    "@types/node": "^18.11.19",
    "@types/nodemailer": "^6.4.6",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitest/coverage-istanbul": "^1.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "mjml": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "shx": "^0.3.4",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.3",
    "typedoc": "^0.25.12",
    "typescript": "^4.9.5",
    "vitest": "^1.3.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "htmlWhitespaceSensitivity": "ignore"
  }
}

{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/controllers/*": ["controllers/*"],
      "@/middlewares": ["middlewares"],
      "@/models/*": ["models/*"],
      "@/queues": ["queues"],
      "@/routes/*": ["routes/*"],
      "@/schemas/*": ["schemas/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"]
    },
    "alwaysStrict": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"]
}
